= form_for @notice, :html => {:multipart => true} do |f|
  -if @notice.errors.any?
    #error_explanation
      %h2= "#{pluralize(@notice.errors.count, "error")} prohibited this notice from being saved:"
      %ul
        - @notice.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :category_id
    = f.collection_select :category_id, Category.all, :id, :name
  .field
    = f.file_field :image
  .actions
    = f.submit 'Save'
