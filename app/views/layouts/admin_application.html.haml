%html
	%head
		%title SimpleWebiste
		= stylesheet_link_tag    "application", :media => "all"
		= javascript_include_tag "application"
		= csrf_meta_tags
	%body
		%header
			#user_nav
				- if user_signed_in?
					= "Hi, you are signed in with #{current_user.name} |"
					= link_to "Sign out", destroy_user_session_path, :method => :delete
				- else
					= link_to "Sign in", new_user_session_path
		%messages
			#notice= notice
			#alert= alert
		%nav
			%ul
				%li= link_to "Admin", admin_path
				%li= link_to "Category #{ Category.count }", categories_path
				%li= link_to "Notice #{ Notice.count }", notices_path
				%li= link_to "Document #{ Document.count }", documents_path

		= yield